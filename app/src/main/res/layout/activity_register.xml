<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.example.czz.coolquestion.activity.RegisterActivity">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:layout_above="@+id/relative"
    android:src="@mipmap/zhuce"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="27dp"/>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp">


    <TextView
        android:text="账         号："
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_edit"
        android:inputType="textPersonName"
        android:ems="10"
        android:paddingTop="10dp"
        android:id="@+id/editText_reg_name"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:cursorVisible="false"/>

    <TextView
        android:text="密         码："
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="20dp"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_edit"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_reg_password"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:cursorVisible="false"/>

    <TextView
        android:text="确认密码："
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/editText_reg_password"
        android:layout_toStartOf="@+id/editText_reg_password"
        android:layout_marginTop="20dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/log_edit"
        android:inputType="textPassword"
        android:ems="10"
        android:paddingTop="10dp"
        android:id="@+id/editText_reg_passToo"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:cursorVisible="false"/>

    <TextView
        android:text="完成注册"
        android:background="@drawable/text_shap"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reg_reg"
        android:layout_below="@+id/editText_reg_passToo"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginTop="15dp"/>

        <TextView
            android:text="返回"
            android:background="@drawable/text_shap"
            android:textColor="@color/text_color"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_reg_reg"
            android:layout_toLeftOf="@+id/textView_reg_reg"
            android:layout_marginRight="10dp"
            android:id="@+id/textview_reg_back"/>
    </RelativeLayout>

</RelativeLayout>

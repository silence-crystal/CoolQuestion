<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/question_gv_item_layout"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/question_gv_item_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/java"/>
        <TextView
            android:id="@+id/question_gv_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_gv_item_img"
            android:layout_alignLeft="@id/question_gv_item_img"
            android:layout_alignRight="@id/question_gv_item_img"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Paython"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>

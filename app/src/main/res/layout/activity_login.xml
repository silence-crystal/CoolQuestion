<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00688b"
    tools:context="com.example.czz.coolquestion.activity.LoginActivity">

    <com.example.czz.coolquestion.view.ImageViewShape
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/relativelayout"
        android:src="@mipmap/head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:id="@+id/log_log_head"/>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#88ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp">
    <TextView
        android:text="账号："
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/log_edit"
        android:id="@+id/editText_log_name"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="密码："
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="210dp"
        android:background="@drawable/log_edit"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/editText_log_password"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:text="注册"
        android:background="@drawable/text_shap"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_log"
        android:layout_toEndOf="@+id/textView_log"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/textView_reg"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/textView_log" />

    <TextView
        android:text="登录"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_shap"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_log"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_below="@+id/textView4" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kuku"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:paddingRight="20dp"/>


</RelativeLayout>

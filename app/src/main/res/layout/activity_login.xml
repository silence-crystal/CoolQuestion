<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.example.czz.coolquestion.activity.LoginActivity">

    <com.example.czz.coolquestion.view.ImageViewShape
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/relativelayout"
        android:src="@mipmap/head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:id="@+id/log_log_head"/>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
    <!--<TextView
        android:text="账号："
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:id="@+id/textView3" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/editText_log_name"
        android:cursorVisible="false"
        android:hint="账号"
        android:paddingLeft="10dp"
        android:textColorHint="#adadad"/>

    <!--<TextView
        android:text="密码："
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4" />-->

    <EditText
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_log_password"
        android:cursorVisible="false"
        android:hint="密码"
        android:textColorHint="#adadad"
        android:layout_below="@+id/editText_log_name"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"/>

    <!--<TextView
        android:text="注册"
        android:background="@drawable/text_shap"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_log"
        android:layout_toEndOf="@+id/textView_log"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/textView_reg"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/textView_log" />-->

    <TextView
        android:text="登录"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_shap"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView_log"
        android:layout_below="@+id/editText_log_password"
        android:layout_marginTop="20dp"
        />
        <TextView
            android:id="@+id/textView_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:textColor="#09a3dc"
            android:layout_alignRight="@+id/textView_log"
            android:layout_below="@+id/textView_log"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/log11"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:paddingRight="20dp"/>


</RelativeLayout>

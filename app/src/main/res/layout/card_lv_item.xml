<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    ><!-- 为突出卡片效果，需设置左右padding,上下通过listView的divider设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/card_listview_item_sel">
        <TextView
            android:id="@+id/card_lv_item_question_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java专项练习"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/card_lv_item_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是我的第一个错题哎，好激动呦，你们说是不是？"
            android:textSize="15sp"
            android:layout_margin="5dp"/>

    </LinearLayout>

</FrameLayout>